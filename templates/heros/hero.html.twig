{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
 {% if hero != null %}
    <div class="flex justify-center bg-gray-200 m-2 " >
    <img class="object-contain w-100 h-100 mx-auto " src="{{ hero.image }}" alt="{{ hero.name }}" 
    style="width: 300px; height: 500px;">
    <div class="m-4">
        <p class="text-lg font-semibold m-1">Nom : {{ hero.name }}</p>
        <p class="text-lg font-semibold m-1">Ki : {{ hero.ki }}</p>
        <p class="text-lg font-semibold m-1">Max KI : {{ hero.maxKi }}</p>
        <p class="text-lg font-semibold m-1">Race : {{ hero.race }}</p>
        <p class="text-lg font-semibold m-1">Genre : {{ hero.gender }}</p>
        <p class="text-lg font-semibold m-1">Description : {{ hero.description }}</p>
        <p class="text-lg font-semibold m-1">Affiliation : {{ hero.affiliation }}</p>
        <p class="text-lg font-semibold m-1">Supprimer dans : {{ hero.deletedAt }}</p>
    </div>
</div>
{% else %}
<div class="flex justify-center bg-gray-200 m-2" >
        <p class="text-lg font-semibold">Ce personnage n'existe pas</p>        
</div>
 {% endif %}



{% endblock %}
